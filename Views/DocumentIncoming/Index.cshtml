@model IEnumerable<DMS.Models.Documents>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h3>Datatable</h3>
            <a href="@Url.Action("Create","DocumentIncoming")" class="btn btn-secondary"><i class="fa fa-plus"></i>&nbsp; Create</a>
        </div>
        <hr />
        <table id="table" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Reference Number
                    </th>
                    <th>
                        Routing Number
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Document Type
                    </th>
                    <th>
                        Document Status
                    </th>
                    <th>
                        Remarks
                    </th>
                    <th width="15%">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reference_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.routing_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rgv_document_type_code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rgv_document_status_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.remarks)
                    </td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Edit", "DocumentIncoming", new {id = item.id})" class="btn btn-primary">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <i class="nav-icon fas fa-ellipsis-h"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu" style="">
                                <a href="@Url.Action("Forward", "DocumentIncoming", new {id = item.id})" class="dropdown-item">FORWARD</a>
                                <a href="@Url.Action("Outgoing", "DocumentIncoming", new {id = item.id})" class="dropdown-item">Send to OUTGOING</a>
                                <a href="@Url.Action("Completed", "DocumentIncoming", new {id = item.id})" class="dropdown-item">Send to COMPLETED</a>
                                <a class="dropdown-divider"></a>
                                <a id="delete" href="javascript:void(0);" data-id="@item.id" class="dropdown-item">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>