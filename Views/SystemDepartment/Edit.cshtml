@using DMS.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    System_departments system_department = ViewData["system_department"] as System_departments;
}

<div class="card">
    <div class="card-body">
        <h2>Edit</h2>
        <hr />
        <form id="form">
            <input type="hidden" id="id" name="id" value="@system_department.id" />
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="ctr">Sequence</label>
                        <input type="number" id="ctr" name="ctr" class="form-control" placeholder="Enter sequence" value="@system_department.ctr">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="code">Code</label>
                        <input type="text" id="code" name="code" class="form-control" placeholder="Enter code" value="@system_department.code">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="@system_department.name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" placeholder="Enter description" value="@system_department.description">
                    </div>
                </div>
            </div>

            <hr />
            <div class="text-center">
                <a href="@Url.Action("Index","SystemDepartment")" class="btn btn-danger">Back</a>
                &nbsp;
                &nbsp;
                <button id="btnSubmit" name="btnSubmit" type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>