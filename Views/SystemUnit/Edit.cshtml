@using DMS.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    IEnumerable<System_departments> system_departments = ViewData["system_departments"] as IEnumerable<System_departments>;
    IEnumerable<System_divisions> system_divisions = ViewData["system_divisions"] as IEnumerable<System_divisions>;
    System_units system_unit = ViewData["system_unit"] as System_units;
}

<div class="card">
    <div class="card-body">
        <h2>Edit</h2>
        <hr />
        <form id="form">
            <input type="hidden" id="id" name="id" value="@system_unit.id" />
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label" for="system_department_id">Department</label>
                    <div class="form-group">
                        <select id="system_department_id" name="system_department_id" class="form-control">
                            <option value="0" @(system_unit.system_department_id == 0 ? "selected" : "")>--NO SELECTION--</option>
                            @foreach (var item in system_departments)
                            {
                                <option value="@item.id" @(system_unit.system_department_id == item.id ? "selected" : "")>@item.name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label" for="system_division_id">Division</label>
                    <div class="form-group">
                        <select id="system_division_id" name="system_division_id" class="form-control">
                            <option value="0" @(system_unit.system_division_id == 0 ? "selected" : "")>--NO SELECTION--</option>
                            @foreach (var item in system_departments)
                            {
                                <option value="@item.id" @(system_unit.system_division_id == item.id ? "selected" : "")>@item.name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="ctr">Sequence</label>
                        <input type="number" id="ctr" name="ctr" class="form-control" placeholder="Enter sequence" value="@system_unit.ctr">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="code">Code</label>
                        <input type="text" id="code" name="code" class="form-control" placeholder="Enter code" value="@system_unit.code">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="@system_unit.name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" placeholder="Enter description" value="@system_unit.description">
                    </div>
                </div>
            </div>

            <hr />
            <div class="text-center">
                <a href="@Url.Action("Index","SystemUnit")" class="btn btn-danger">Back</a>
                &nbsp;
                &nbsp;
                <button id="btnSubmit" name="btnSubmit" type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>