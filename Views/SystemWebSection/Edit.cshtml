@using DMS.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    IEnumerable<System_web_modules> system_web_modules = ViewData["system_web_modules"] as IEnumerable<System_web_modules>;
    System_web_sections system_web_section = ViewData["system_web_section"] as System_web_sections;
}

<div class="card">
    <div class="card-body">
        <h2>Edit</h2>
        <hr />
        <form id="form">
            <input type="hidden" id="id" name="id" value="@system_web_section.id" />
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label" for="system_web_module_id">Web Module</label>
                    <div class="form-group">
                        <select id="system_web_module_id" name="system_web_module_id" class="form-control">
                            <option value="0" @(system_web_section.system_web_module_id == 0 ? "selected" : "")>--NO SELECTION--</option>
                            @foreach (var item in system_web_modules)
                            {
                                <option value="@item.id" @(system_web_section.system_web_module_id == item.id ? "selected" : "")>@item.name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="code">Code</label>
                        <input type="text" id="code" name="code" class="form-control" placeholder="Enter code" value="@(system_web_section.code)">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="@(system_web_section.name)">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" placeholder="Enter description" value="@(system_web_section.description)">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="link">Link</label>
                        <input type="text" id="link" name="link" class="form-control" placeholder="Enter link" value="@(system_web_section.link)">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="icon">Icon</label>
                        <input type="text" id="icon" name="icon" class="form-control" placeholder="Enter icon" value="@(system_web_section.icon)">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="ctr">Sequence</label>
                        <input type="number" id="ctr" name="ctr" class="form-control" placeholder="Enter sequence" value="@(system_web_section.ctr)">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="is_active">Is Active?</label>
                        <select id="is_active" name="is_active" class="form-control">
                            <option value="1" @(system_web_section.is_active == 1 ? "selected" : "")>Yes</option>
                            <option value="0" @(system_web_section.is_active == 0 ? "selected" : "")>No</option>
                        </select>
                    </div>
                </div>
            </div>

            <hr />
            <div class="text-center">
                <a href="@Url.Action("Index","SystemWebSection")" class="btn btn-danger">Back</a>
                &nbsp;
                &nbsp;
                <button id="btnSubmit" name="btnSubmit" type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>